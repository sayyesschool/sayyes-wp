<article class="card card-blog article-card">
    <div class="card-image">
        <img class="img" src="{{ post.thumbnail.src|resize(600,400) }}">
    </div>
    
    <div class="card-body">
        <div class="post-meta text-muted">
            <span class="badge post-date">
                {{ post.post_date|date }}
            </span>

            <span class="badge post-category">
                <i class="fa fa-{{ post.category.icon }}"></i>
                {{ post.category }}
            </span>
        </div>

        <h4 class="card-title">{{ post.title }}</h4>

        <div class="card-description">
            {{ post.preview.chars(128).read_more('') }}
        </div>
    </div>

    <div class="card-footer">
        {% if post.get_comment_count() %}
            <span class="btn btn-link">
                <i class="fa fa-comment"></i> {{ post.get_comment_count() }}
            </span>
        {% endif %}

        <a class="btn btn-primary btn-outline-primary btn-sm" href="{{ post.link }}">Читать дальше</a>
    </div>
</article>