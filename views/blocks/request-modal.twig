{% embed 'components/modal.twig' with {
    id: 'request-modal',
    component: 'RequestModal',
    tabs: true
} %}
    {% block content %}
        {% embed 'components/tabs.twig' with {
            tabs: [
                {
                    content: 'Взрослым',
                    value: 'adults',
                    active: true
                },
                {
                    content: 'Детям',
                    value: 'children',
                }
            ]
        } %}
            {% block content %}
                {% set title = 'Запишитесь на бесплатный пробный урок' %}
                {% set description = 'Мы свяжемся с вами, запишем на урок, ответим на вопросы и расскажем о курсах' %}

                {% embed 'blocks/request-block.twig' with {
                    name: 'adults',
                    title,
                    description
                } %}
                    {% block content %}
                        {% include 'blocks/request-form.twig' with {
                            format: true
                        } %}
                    {% endblock %}
                {% endembed %}

                {% embed 'blocks/request-block.twig' with {
                    name: 'children',
                    class: 'hidden',
                    title,
                    description
                } %}
                    {% block content %}
                        {% include 'blocks/request-form.twig' with {
                            children: true,
                            format: true
                        } %}
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}