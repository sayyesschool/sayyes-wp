<section class="course-feedback {{class}}">
	<div class="section-container">
		<h2 class="course-feedback__title subtitle">{{title}}</h2>
		<p class="course-feedback__description">{{description}}</p>
	</div>

	<div class="slider swiper-course-feedback">
		<div class="slider__arrows">
			<button class="slider__left-arrow"></button>
			<button class="slider__right-arrow"></button>
		</div>

		<div class="swiper-wrapper">
			{% for item in courseFeedback %}
				<div class="slider__slide swiper-slide">
					<div class="course-feedback__block">
						<div class="course-feedback__rating">
							<div class="course-feedback__rating-value">{{item.score}}</div>
							<div class="course-feedback__rating-info">
								<div class="stars"></div>
								<p class="course-feedback__zoon">наш рейтинг на
									<span class="text text--underline">{{item.company}}</span>
								</p>
							</div>
						</div>

						<div class="course-feedback__cards">
							{% for review in item.reviews %}
								<div class="course-feedback__card">
									{% for paragraph in review.content %}
										<div class="course-feedback__paragraph">
											{% if attribute(paragraph, 'title') is defined %}
												<div class="text text--weight-700">{{paragraph.title}}</div>
												{{paragraph.description}}
											{% else %}
												{{paragraph}}
											{% endif %}
										</div>
									{% endfor %}

									<a class="course-feedback__link" href="https://zoon.ru/msk/trainings/shkola_anglijskogo_yazyka_online_ingleks/" target="blank">Читать весь отзыв</a>

									<div class="course-feedback__info">
										<div class="course-feedback__meta">
											<p class="course-feedback__author">{{review.author}}</p>
											<p class="course-feedback__date">{{review.date}}</p>
										</div>
										<div class="stars"></div>
									</div>
								</div>
							{% endfor %}
						</div>
						
						<a class="btn {{btnColor}}" href="https://zoon.ru/msk/trainings/shkola_anglijskogo_yazyka_online_ingleks/" target="blank">Читать все отзывы на {{item.company}}</a>
					</div>
				</div>
			{% endfor %}
		</div>

		<ul class="slider__pagination"></ul>
	</div>
</section>