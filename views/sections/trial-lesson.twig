{% embed 'components/section.twig' with {
	name: 'trial-lesson'
} %}
	{% block title %}
		Запишитесь на
		<span class="color-primary">бесплатный</span>
		пробный урок
	{% endblock %}

	{% block description %}
		На уроке вы узнаете свой уровень, оцените методику школы, познакомитесь с преподавателем
	{% endblock %}

	{% block content %}
		{% embed 'components/tabs.twig' with {
			tabs: [
				{
					content: 'Взрослым',
					value: 'adults',
					active: active_tab == 'adults'
				},
				{
					content: 'Детям',
					value: 'children',
					active: active_tab == 'children'
				}
			]
		} %}
			{% block content %}
				<div class="invite invite--adults{{(active_tab == '' or active_tab == 'adults') ? '' : ' hidden'}}" data-tab-panel="adults">
					<div class="invite__left">
						<div class="invite__title">Оставьте заявку на пробный урок</div>

						<p class="invite__description">Мы свяжемся с вами, запишем на урок, ответим на вопросы, и расскажем о курсах</p>
					</div>

					<div class="invite__right">
						{% include 'blocks/request-form.twig' with {
							format: true
						} %}
					</div>
				</div>

				<div class="invite invite--children{{active_tab == 'children' ? '' : ' hidden'}}" data-tab-panel="children">
					<div class="invite__left">
						<div class="invite__title">Оставьте заявку на пробный урок</div>

						<p class="invite__description">Мы свяжемся с вами, запишем на урок, ответим на вопросы, и расскажем о курсах</p>
					</div>

					<div class="invite__right">
						{% include 'blocks/request-form.twig' with {
							format: true,
							children: true
						} %}
					</div>
				</div>
			{% endblock %}
		{% endembed %}
	{% endblock %}
{% endembed %}