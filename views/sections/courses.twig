{% embed 'components/section.twig' with {
    name: 'courses',
    title,
    description
} %}
    {% block content %}
        {% embed 'components/tabs.twig' with {
			tabs: [
				{
					content: 'Курсы для взрослых',
                    value: 'adults',
					active: true
				},
				{
					content: 'Курсы для детей',
                    value: 'children'
				}
			],
            pills: true,
            color: 'yellow'
		} %}
            {% block content %}
                <div data-tab-panel="adults">
                    {% embed 'blocks/courses-cards.twig' with {
                        courses: courses_adults,
                        colors: ['black', 'pink', 'purple'],
                        formats: {
                            group_offline: 'офлайн группа',
                            group_online: 'онлайн группа',
                            individual_online: 'индивидуально'
                        }
                    } %}
                        {% block content %}
                            {% if with_help %}
                                <div class="text-card card">
                                    <h3 class="card__title">Затрудняетесь с выбором курса или ваша цель специфична?</h3>
                                    <p class="card__description">Подберем курс под ваши цели или создадим индивидуальный курс под вас!</p>
                                    <button class="btn btn--purple" data-modal-trigger="callback-modal">Попробовать бесплатно</button>
                                </div>
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </div>

                <div class="hidden" data-tab-panel="children">
                    {% embed 'blocks/courses-cards.twig' with {
                        courses: courses_children,
                        colors: ['black', 'pink', 'purple'],
                        formats: {
                            individual_online: 'офлайн индивидуально',
                            individual_offline: 'онлайн индивидуально'
                        }
                    } %}
                        {% block content %}
                            {% if with_help %}
                                <div class="text-card card">
                                    <h3 class="card__title">Затрудняетесь с выбором курса или ваша цель специфична?</h3>
                                    <p class="card__description">Подберем курс под ваши цели или создадим индивидуальный курс под вас!</p>
                                    <button class="btn btn--purple" data-modal-trigger="callback-modal">Попробовать бесплатно</button>
                                </div>
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </div>
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}