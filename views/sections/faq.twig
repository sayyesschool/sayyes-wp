{% embed 'components/section.twig' with {
	name: 'faq',
	title: title ?: 'На часто задаваемые вопросы о курсе отвечает Шаталова Вера, сооснователь SAY YES!',
	description,
	padded_header: true
} %}
	{% block content %}
		<img class="image" src="{{theme.link}}/static/images/pictures/vera.jpg" alt="Вера Шаталова">

		{% include 'components/accordion.twig' with {
			items: items|map(item => ({
				title: item.question,
				content: item.answer
			}))
		} %}
	{% endblock %}
{% endembed %}