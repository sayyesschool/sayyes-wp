<section class="hero">
	<div class="hero__content">
		<h1 class="hero__title">
			{% block title %}
				{{title}}
			{% endblock %}
		</h1>

		<div class="hero__description">
			{% block description %}
				{{description}}
			{% endblock %}
		</div>

		{% block content %}
			{{content}}
		{% endblock %}
	</div>

	{% if image %}
		<div class="hero__image">
			<img class="image" src="{{theme.link}}/static/images/mainscreens/{{image}}" alt="Команда мечты">
		</div>
	{% endif %}
</section>