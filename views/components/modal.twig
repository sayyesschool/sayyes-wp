<div {% if id %} id="{{id}}"{% endif %} class="{{html_classes(class ?? [], 'modal', {
	'modal--with-tabs': tabs
})}}" data-component="{{component ?? 'Modal'}}">
	<div class="modal__surface">
		<button class="modal__close">
			<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M1 1L17 17M17 1L1 17" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
			</svg>
		</button>
		
		<div class="modal__body">
			{% if title or description or block('header') is defined %}
				<div class="modal__header">
					{% if title %}
						<h2 class="modal__title">{{title}}</h2>
					{% endif %}

					{% if description %}
						<p class="modal__description">{{description}}</p>
					{% endif %}

					{% if block('header') is defined %}
						{{block('header')}}
					{% endif %}
				</div>
			{% endif %}

			{% if content or block('content') is defined %}
				<div class="modal__content">
					{% if content %}
						{{content}}
					{% endif %}

					{% if block('content') is defined %}
						{{block('content')}}
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
</div>