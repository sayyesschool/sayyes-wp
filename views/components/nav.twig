<nav class="nav">
    <ul class="nav-list">
        {% for item in items %}
            {% if item.link %}
                <li class="nav-item">
                    <a
                        class="{{html_classes('nav-link', {
                            'nav-link--active': item.current
                        })}}"
                        href="{{ item.link }}"
                        {% if item.is_external %} target="_blank"{% endif %}
                    >{{item.title}}</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <span class="nav-link">{{ item.title }}</span>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>