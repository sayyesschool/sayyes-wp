{% embed 'components/slider.twig' with {
	name: 'course-testimonials'
} %}
	{% block content %}
		{% for group in groups %}
			<div class="course-testimonial swiper-slide">
				<div class="course-testimonial__rating">
					<div class="course-testimonial__rating-value">{{group.score}}</div>
					<div class="course-testimonial__rating-info">
						<div class="stars"></div>
						<p class="text text--weight-800">наш рейтинг на
							<span class="text text--underline">{{group.company}}</span>
						</p>
					</div>
				</div>

				<div class="course-testimonial__cards">
					{% for testimonial in group.testimonials %}
						<div class="text-card card">
							<div class="card__content">
								{{testimonial.content}}

								<a class="link" href="{{testimonial.link}}" target="blank">Читать весь отзыв</a>
							</div>

							<div class="card__footer">
								<div class="flex flex--column">
									<p class="text text--small text--weight-800">{{testimonial.author}}</p>
									<p class="text text--small text--muted">{{testimonial.date}}</p>
								</div>

								<div class="stars"></div>
							</div>
						</div>
					{% endfor %}
				</div>
				
				<a class="btn {{btnColor}}" href="{{item.link}}" target="blank">Читать все отзывы на {{item.company}}</a>
			</div>
		{% endfor %}
	{% endblock %}
{% endembed %}