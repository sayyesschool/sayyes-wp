{% embed 'components/tabs.twig' with {
	tabs: [
		{
			content: 'Взрослым',
			target: '.feedback-block--adults',
			active: true
		},
		{
			content: 'Детям',
			target: '.feedback-block--children'
		}
	]
} %}
	{% block content %}
		<div class="feedback-block feedback-block--adults">
			<div class="feedback-block__content">
				<p class="feedback-block__description">Мы свяжемся с вами, запишем на урок, ответим на вопросы и расскажем о курсах</p>

				{% include 'components/request-form.twig' %}
			</div>
		</div>

		<div class="feedback-block feedback-block--children hidden">
			<div class="feedback-block__content">
				<p class="feedback-block__description">Мы свяжемся с вами, запишем на урок, ответим на вопросы и расскажем о курсах</p>

				{% include 'components/request-form.twig' with {
					children: true
				} %}
			</div>
		</div>
	{% endblock %}
{% endembed %}