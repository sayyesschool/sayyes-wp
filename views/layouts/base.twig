<!doctype html>
<html {{site.language_attributes}}>
    <head>
        <meta charset="{{site.charset}}">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <meta name="yandex-verification" content="77618a975ea21450">

        <title>
            {% if wp_title %}
                {{wp_title}} / {{site.name}}
            {% else %}
                {{site.name}}
            {% endif %}
        </title>

        <link rel="pingback" href="{{site.pingback_url}}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700;800&family=Shantell+Sans:ital,wght@1,300..400&display=swap">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,700&subset=latin,cyrillic">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@24.5.0/build/css/intlTelInput.css">
        <link rel="stylesheet" href="{{theme.link}}/static/styles/main.css?v={{site.version}}">

        {% block styles %}
        {% endblock %}

        {% include 'includes/constants.twig' %}
        {% include 'includes/recaptcha.twig' %}
        {% include 'includes/yandex-metrika.twig' %}
        {# {% include 'includes/jivosite.twig' %} #}

        <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@24.5.0/build/js/intlTelInput.min.js" defer></script>
        
        {% block head %}
        {% endblock %}

        {{ function('wp_head') }}
    </head>

    <body id="{{page.name}}-page" class="{{body_class}} {{layout_class}}">
        {% include 'blocks/header.twig' %}

        <main class="main">
            {% block content %}
            {% endblock %}
        </main>

        {% include 'blocks/footer.twig' %}

        {% include 'blocks/callback-modal.twig' %}
        {% include 'blocks/image-modal.twig' %}
        {% include 'blocks/error-modal.twig' %}
        {% include 'blocks/request-modal.twig' %}
        {% include 'blocks/success-modal.twig' %}
        {% include 'blocks/video-modal.twig' %}

        {% block modal %}
        {% endblock %}

        <script src="{{theme.link}}/static/scripts/main.js?v={{site.version}}"></script>

        {% block scripts %}
        {% endblock %}

        {{ function('wp_footer') }}
    </body>
</html>