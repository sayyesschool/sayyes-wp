{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/mainscreen-big.twig' with {
        mixin: 'offline',
        title: 'Обучение английскому языку офлайн индивидуально',
        description: 'Занятия в школе по удобному для вас графику и с ТОП преподавателями!',
        btnText: 'Оставить заявку',
        button: true
        image: 'mainscreen-10.jpg',
    } %}

	{% include 'sections/about-course.twig' with {
       mixin: 'about-course--offline',
       title: 'Наша школа предлагает индивидуальные офлайн уроки под ваши цели и темп обучения.',
       text: 'Занятия проходят в школе в Москве, либо в офисе клиента. Обучение проводят русскоязычные преподаватели и носители языка.',
       purpose: 'Мы делаем ставку на живое общение и программу, которую учитель адаптирует лично под вас. В индивидуальном обучении студент практикует речь 80% времени.'
    } %}

	<section class="offline-shortly">
        <div class="section-container">
            <h2 class="subtitle">Коротко об индивидуальном офлайн обучении</h2>

            <div class="text-blocks text-blocks--offline-shortly">
                {% for item in [
                    {
                        image: 'lightning',
                        title: 'Интенсивность  обучения',
                        description: 'По желанию студента'
                    },
                    {
                        image: 'clock',
                        title: 'Длительность занятия',
                        description: '45 или 60 минут'
                    },
                    {
                        image: 'calendar',
                        title: 'Расписание занятий',
                        description: 'По желанию студента'
                    },
                    {
                        image: 'levels-2',
                        title: 'Продолжительность уровня',
                        description: 'От 6 до 9 месяцев'
                    },
                    {
                        image: 'rubles',
                        title: 'Стоимость занятий',
                        description: 'от 1.550 ₽/урок'
                    }
                ] %}
                    <div class="text-block text-block--{{item.image}}-bg">
                        <h4 class="text-block__title">{{item.title}}</h4>
                        <p class="text-block__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

	{% include 'sections/trial-lesson-mini.twig' %}

	<section class="section">
        <h2 class="section-title">Домашнее задание на удобной онлайн-платформе</h2>

        <div class="section-description">
            <p>Закрепление материала происходит на надежной платформе, специально разработанной нашей школой.</p>
            <p>Платформа предоставляет быстрый доступ ко всем материалам: учебникам, домашнему заданию и словарю.</p>
        </div>

        <img>
    </section>

	<section class="peculiarity">
        <div class="section-container">
            <h2 class="subtitle">Особенности индивидуального офлайн обучения в SAY YES!</h2>
            
            <div class="peculiarity__cards">
                {% for item in [
                    {
                        title: 'Занятия по удобному расписанию',
                        description: 'Занятия рано утром или поздно вечером? Мы постараемся подобрать удобное для вас время уроков.'
                    },
                    {
                        title: 'Закрепление материала на онлайн платформе',
                        description: 'Наша онлайн платформа позволяет вам выполнять домашку в удобном виде, интерактивно и эффективно.'
                    },
                    {
                        title: 'Гибкая система оплаты',
                        description: 'Пакетная оплата обучения от 4 до 16 уроков с возможностью переноса занятий и заморозки.'
                    },
                    {
                        title: 'ТОП преподаватели школы',
                        description: 'Заниятия с ТОП преподавателями лично— залог вашего прогресса!'
                    }
                ] %}
                    <div class="peculiarity__card">
                        <h4 class="peculiarity__title">{{item.title}}</h4>
                        <p class="peculiarity__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

	{% include 'sections/course-feedback.twig' with {
        class: 'course-feedback__offline',
        title: 'Отзывы об индивидуальном офлайн обучении',
        courseFeedback: data.courseFeedbackAdults,
        btnColor: 'btn--yellow'
    } %}

	{% include 'sections/course-faq.twig' %}

	{% include 'sections/trial-lesson.twig' %}
{% endblock %}