{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/main.twig' with {
        title: page.heading ?? page.title,
        description: page.content,
        button: true,
        image: page.thumbnail
    } %}

	{% embed 'components/section.twig' with {
        name: 'about-format',
        title: sections.about_format.title,
        horizontal: true
    } %}
        {% block content %}
            <p class="text">{{sections.about_format.content[0]}}</p>
            <p class="text text--bold">{{sections.about_format.content[1]}}</p>
        {% endblock %}
    {% endembed %}

    {% embed 'components/section.twig' with {
        name: 'format-facts',
        title: sections.format_facts.title
    } %}
        {% block content %}
            <div class="cards grid grid--2-1-2">
                {% for item in sections.format_facts.items %}
                    <div class="fact-card text-card--{{item.image}}-bg">
                        <h4 class="card__title">{{item.title}}</h4>
                        <p class="card__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>

            <div class="text text--center">
                <p class="asterisk-text">*Даты старта групп, точное расписание и информацию по действующим группам вы можете уточнить у менеджеров по телефонам:</p>

                <p>8 499 650-53-47 / 8 925 091-64-16</p>
            </div>
        {% endblock %}
    {% endembed %}

	{% include 'sections/trial-lesson-cta.twig' %}

    {% if sections.about_lessons %}
        {% embed 'components/section.twig' with {
            name: 'about-lessons',
            title: sections.about_lessons.title,
            horizontal: true
        } %}
            {% block content %}
                <p class="text">{{sections.about_lessons.content[0]}}</p>
                <p class="text text--bold">{{sections.about_lessons.content[1]}}</p>
            {% endblock %}
        {% endembed %}

        {% include 'sections/video.twig' with {
            name: 'format-video',
            title: 'Посмотрите видео о методике школы',
            video: {
                youtube_id: 'Vsfz_1QzwDA',
                image: {
                    path: 'video-sections/video-section-2.jpg'
                },
                modal: true
            }
        } %}
    {% endif %}

    {% if sections.online_class %}
        {% embed 'components/section.twig' with {
            name: 'online-class',
            title: 'Удобный онлайн-класс',
            description: 'Занятия проходят на надежной платформе, специально разработанной нашей школой. Общайтесь с преподавателем и выполняйте задания в одном окне браузера.',
            horizontal: true
        } %}
            {% block content %}
                {% include 'components/list.twig' with {
                    classes: 'list--ul',
                    items: [
                        {
                            title: 'Все в одном месте',
                            description: 'Быстрый доступ ко всем материалам: учебникам, домашнему заданиюи словарю.'
                        },
                        {
                            title: 'Эффективное взаимодействие',
                            description: 'Во время урока преподаватель видит ваши ответы, исправляет и объясняет ошибки.'
                        },
                        {
                            title: 'Удобный личный кабинет',
                            description: 'Вы можете отслеживать в нем свой прогресс и следить за историей оплат.'
                        }
                    ]
                } %}
            {% endblock %}

            {% block media %}
                <img class="image" src="{{theme.link}}/static/images/pictures/oc.jpg" alt="Say Yes">
            {% endblock %}
        {% endembed %}
    {% endif %}

    {% if sections.homework %}
        {% embed 'components/section.twig' with {
            name: 'convenient-oc',
            title: 'Домашнее задание на удобной онлайн-платформе',
            horizontal: true
        } %}
            {% block description %}
                <p>Закрепление материала происходитна надежной платформе, специально разработанной нашей школой.</p>
                <p>Платформа предоставляет быстрый доступ ко всем материалам: учебникам, домашнему заданию и словарю.</p>
            {% endblock %}

            {% block media %}
                <img class="convenient-oc__img" src="{{theme.link}}/static/images/pictures/oc.jpg" alt="Say Yes">
            {% endblock %}
        {% endembed %}
    {% endif %}

    {% embed 'components/section.twig' with {
        name: 'format-features',
        title: sections.format_features.title
    } %}
        {% block content %}
            <div class="card grid grid--4">
                {% for item in sections.format_features.items %}
                    <div class="feature-card">
                        <h4 class="feature-card__title">{{item.title}}</h4>
                        <p class="feature-card__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>
        {% endblock %}
    {% endembed %}

    {% embed 'components/section.twig' with {
        name: 'format-testimonials',
        title: 'Отзывы о формате <br>' ~ format.title,
        description: 'За ' ~ COMPANY_AGE ~ ' работы, обучили более 10 000 человек и получили более 800 отзывов'
    } %}
        {% block content %}
            {% include 'blocks/course-testimonials-slider.twig' with {
                groups: testimonial_groups
            } %}
        {% endblock %}
    {% endembed %}

	{% include 'sections/faq.twig' with {
        items: sections.format_faq.items
    } %}

	{% include 'sections/trial-lesson.twig' %}
{% endblock %}