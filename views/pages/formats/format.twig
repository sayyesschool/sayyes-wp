{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/mainscreen-big.twig' with {
        title: page.heading ?? page.title,
        description: page.content,
        button: true,
        image: page.thumbnail
    } %}

	{% embed 'sections/about.twig' with {
       title: sections.about_format.title
    } %}
        {% block content %}
            <p class="text">{{sections.about_format.content[0]}}</p>
            <p class="text text--bold">{{sections.about_format.content[1]}}</p>
        {% endblock %}
    {% endembed %}

	<section class="format-shortly">
        <div class="section-container">
            <h2 class="subtitle">{{sections.format_facts.title}}</h2>

            <div class="text-blocks text-blocks--offline-shortly">
                {% for item in sections.format_facts.items %}
                    <div class="text-block text-block--{{item.image}}-bg">
                        <h4 class="text-block__title">{{item.title}}</h4>
                        <p class="text-block__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>

            <p class="format-shortly__info">*Даты старта групп, точное расписание и информацию по действующим группам вы можете уточнить у менеджеров по телефонам:</p>

            <p class="format-shortly__number">8 499 650-53-47 / 8 925 091-64-16</p>
        </div>
    </section>

	{% include 'sections/trial-lesson-mini.twig' %}

    {% if sections.about_lessons %}
        {% embed 'sections/about.twig' with {
        title: sections.about_lessons.title
        } %}
            {% block content %}
                <p class="text">{{sections.about_lessons.content[0]}}</p>
                <p class="text text--bold">{{sections.about_lessons.content[1]}}</p>
            {% endblock %}
        {% endembed %}

        {% include 'sections/video.twig' with {
            title: 'Посмотрите видео о методике школы',
            video: {
                youtube_id: 'Vsfz_1QzwDA',
                image: {
                    path: 'video-sections/video-section-2.jpg'
                },
                modal: true
            }
        } %}
    {% endif %}

    {% if sections.online_class %}
        <section class="online-class">
            <div class="section-container">
                <h2 class="online-class__title subtitle">Удобный онлайн-класс</h2>

                <p class="online-class__description">Занятия проходят на надежной платформе, специально разработанной нашей школой. Общайтесь с преподавателем и выполняйте задания в одном окне браузера.</p>

                <div class="online-class__content">				
                    <img class="online-class__img" src="{{theme.link}}/static/images/pictures/oc.jpg" alt="Say Yes">

                    <div class="online-class__features">
                        {% include 'components/list.twig' with {
                            classes: 'list--ul',
                            list: [
                                {
                                    title: 'Все в одном месте',
                                    description: 'Быстрый доступ ко всем материалам: учебникам, домашнему заданиюи словарю.'
                                },
                                {
                                    title: 'Эффективное взаимодействие',
                                    description: 'Во время урока преподаватель видит ваши ответы, исправляет и объясняет ошибки.'
                                },
                                {
                                    title: 'Удобный личный кабинет',
                                    description: 'Вы можете отслеживать в нем свой прогресс и следить за историей оплат.'
                                }
                            ]
                        } %}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    {% if sections.homework %}
        <section class="convenient-oc">
            <div class="section-container">
                <h2 class="subtitle">Домашнее задание на удобной онлайн-платформе</h2>

                <div class="convenient-oc__content">
                    <div class="convenient-oc__description">
                        <p class="convenient-oc__paragraph">Закрепление материала происходитна надежной платформе, специально разработанной нашей школой.</p>

                        <p class="convenient-oc__paragraph">Платформа предоставляет быстрый доступ ко всем материалам: учебникам, домашнему заданию и словарю.</p>
                    </div>
                    
                    <img class="convenient-oc__img" src="{{theme.link}}/static/images/pictures/oc.jpg" alt="Say Yes">
                </div>
            </div>
        </section>
    {% endif %}

	<section class="format-features">
        <div class="section-container">
            <h2 class="format-features__title subtitle">{{sections.format_features.title}}</h2>
            
            <div class="format-features__content">
                {% for item in sections.format_features.items %}
                    <div class="feature-card">
                        <h4 class="feature-card__title">{{item.title}}</h4>
                        <p class="feature-card__description">{{item.description}}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

	{% include 'sections/course-feedback.twig' with {
        class: 'course-feedback__offline',
        title: sections.format_testimonials.title,
        description: 'За 10 лет работы, обучили более 10 000 человек и получили более 800 отзывов',
        courseFeedback: sections.format_testimonials.items,
        btnColor: 'btn--yellow'
    } %}

	{% include 'sections/faq.twig' with {
        items: sections.format_faq.items
    } %}

	{% include 'sections/trial-lesson.twig' %}
{% endblock %}