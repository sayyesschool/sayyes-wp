{% extends 'layouts/one-column.twig' %}

{% block main %}
<h1 class="title page-title">{{ page.title }}</h1>

<div class="description page-description">{{ page.content }}</div>

<div class="row justify-content-center">
    <div class="col-4">
        <form id="payment-form" method="post" action="https://money.yandex.ru/eshop.xml">
            <input name="shopId" value="573221" type="hidden" required>
            <input name="scid" value="878781" type="hidden" required>

            <div class="form-group">
                <input class="form-control" type="number" name="sum" min="1" placeholder="Сумма" required>
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="custName" placeholder="Ф.И.О." required>
            </div>

            <div class="form-group">
                <input class="form-control" type="email" name="customerNumber" placeholder="E-mail" required>
            </div>

            <div class="form-group">
                <textarea class="form-control" name="orderDetails" placeholder="Укажите тип курса и номер договора (если известно)"></textarea>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" checked required>
                    Я согласен на обработку персональных данных
                    <span class="form-check-sign"></span>
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-lg">
                Оплатить
            </button>
        </form>
    </div>
</div>
{% endblock main %}