{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/main.twig' with {
		title: page.heading ?? page.title,
        description: page.content,
        button: true,
        image: page.thumbnail
	} %}

    {% include 'sections/teachers.twig' with {
        teachers
    } %}

    {% include 'sections/trial-lesson.twig' %}
{% endblock %}

