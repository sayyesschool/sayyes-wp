{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/mainscreen-big.twig' with {
        mixin: 'adults',
        title: page.title,
        description: page.content,
        btnText: 'Оставить заявку',
        img: 'mainscreen-5',
        showBtn: true
    } %}

	{% include 'sections/img-courses.twig' with {
        title: 'Наша школа предлагает курсы английского языка для разных уровней знаний и в разнообразных форматах:',
	    courses: [
            {
                title: 'Груповое обучение в школе в Москве',
                description: 'Наш офис находится в 7 минутах пешком от метро Павелецкая.',
                class: 'big-course--white big-course--without-list',
                img: 'course-1'
            },
            {
                title: 'Обучение онлайн в мини-группах и индивидуально',
                description: 'Мы обучаем онлайн в группах в Zoom или индивидуально на собственной платформе.',
                class: 'big-course--white big-course--without-list',
                img: 'course-2'
            }
        ]
    } %}

	{% include 'sections/img-courses-2.twig' with {
        title: 'Выберите необходимое для вас обучение:',
	    courses: courses|map(course => ({
            title: course.title,
            description: course.excerpt({ read_more: false }),
            image: course.thumbnail,
            list: [
                {
                    type: 'офлайн группа',
                    prefix: course.prices.group_offline.prefix,
                    value: course.prices.group_offline.value,
                    postfix: course.prices.group_offline.postfix
                },
                {
                    type: 'онлайн группа',
                    prefix: course.prices.group_online.prefix,
                    value: course.prices.group_online.value,
                    postfix: course.prices.group_online.postfix
                },
                {
                    type: 'индвидиульано',
                    prefix: course.prices.individual_online.prefix,
                    value: course.prices.individual_online.value,
                    postfix: course.prices.individual_online.postfix
                }
            ]
        }))|merge([
            {
                title: 'Разговорный онлайн клуб',
                description: 'Улучшит разговорные навыки!',
                class: 'big-course--violet',
                img: 'course-9',
                image: {
                    src: theme.link ~ '/static/images/courses/course-9.jpg'
                },
                list: [
                    {
                        lessonType: 'встреча в группе <br> онлайн',
                        lessonPrice: '490 ₽',
                        lessonTime: '/встреча'
                    }
                ]
            }
        ]),
        cycleColors
    } %}

	{% include 'sections/trial-lesson.twig' %}
{% endblock %}