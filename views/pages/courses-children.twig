{% extends 'layouts/base.twig' %}

{% block content %}
	{% include 'sections/main.twig' with {
		title: page.heading ?? page.title,
        description: page.content,
        button: {
			modal_options: 'tab:children'
		},
        image: page.thumbnail
	} %}

	{% include 'sections/formats.twig' with {
		title: 'Мы обучаем онлайн на собственной онлайн платформе.',
        formats: [
			{
				title: 'Индивидуальное обучение в школе в Москве',
				description: 'Наш офис находится в 7 минутах пешком от метро Павелецкая.',
				thumbnail: {
                    src: theme.link ~ '/static/images/courses/course-1.jpg'
                }
			},
			{
				title: 'Индивидуальное обучение онлайн',
				description: 'Мы обучаем онлайн в группах в Zoom или индивидуально на собственной платформе.',
				thumbnail: {
                    src: theme.link ~ '/static/images/courses/course-3.jpg'
                }
			}
        ],
        colors: false,
		padded: true,
        with_prices: false
    } %}

	{% include 'sections/courses.twig' with {
        title: 'Выберите необходимое для вас обучение:',
        courses,
        formats: {
			individual_online: 'онлайн индивидуально',
			individual_offline: 'офлайн индивидуально'
		}
    } %}

	{% include 'sections/trial-lesson.twig' with {
		active_tab: 'children'
	} %}
{% endblock %}